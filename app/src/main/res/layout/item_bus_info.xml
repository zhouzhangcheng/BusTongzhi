<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
      >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="18:10"
                android:textColor="#000000"
                android:textSize="18sp"
                android:id="@+id/info_start_time" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-大冲公交站（B班）"
                android:textColor="#88000000"
                android:textSize="12sp"
                android:id="@+id/info_start_place" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="始发"
                android:textColor="#88000000"
                android:textSize="14sp"
                android:id="@+id/info_statue" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
               android:src="@drawable/ic_up"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科兴科学园公交站"
                android:layout_marginLeft="10dp"
                android:textColor="#88000000"
                android:textSize="16sp"
                android:id="@+id/info_start" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
               android:src="@drawable/ic_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="桃源居大门"
                android:layout_marginLeft="10dp"
                android:textColor="#88000000"
                android:textSize="16sp"
                android:id="@+id/info_end" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="全程20km"
                android:textSize="12sp"
                android:textColor="#878787"
                android:id="@+id/info_distance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约45分钟"
                android:layout_marginLeft="8dp"
                android:textColor="#878787"
                android:textSize="12sp"
                android:id="@+id/info_time" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_height="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#FFC9B2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="￥5.9"
            android:id="@+id/info_price" />
        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="提醒"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/ticket_tbg"
            android:id="@+id/info_bt" />
    </LinearLayout>
</LinearLayout>